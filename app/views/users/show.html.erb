<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
<% if current_user.isTeacher?%>
  <%= link_to "Upload file", '#', class: "btn btn-lg btn-primary" %>
  <%= render 'person' %>
<% end %>