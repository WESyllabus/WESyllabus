<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost...",rows: 8 %>
  </div>
  <div class="col-md-4"></div>
  <div class="col-md-4"><%= f.submit "Post", class: "btn btn-primary" %></div>
  <div class="col-md-4"></div>
<% end %>